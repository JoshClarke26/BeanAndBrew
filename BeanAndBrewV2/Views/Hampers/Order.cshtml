@model dynamic

@{
    ViewData["Title"] = "Order";
}

<h1 class="text-center">Hamper Creator</h1>
<hr />

<div class="py-5 text-center">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (HamperItem item in Model.Items)
        {
            <div class="col">
                <h4>@item.Name</h4>
                <img src="~/images/hamperItems/@item.ImagePath" class="img-thumbnail">
                <h4>@Html.DisplayFor(modelItem => item.Price)</h4>
                <form>
                    <button class="btn btn-info">Add To Order</button>
                    <select class="form-select d-inline" style="width: 30%;" asp-items="@ViewBag.AmountList">
                        @for (int i = 1; i < 10; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </form>
            </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title text-center">Hamper Basket</h4>
    </div>
</div>