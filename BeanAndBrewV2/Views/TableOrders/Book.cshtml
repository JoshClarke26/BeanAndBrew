@using static BeanAndBrewV2.Models.TableOrder;
@model BeanAndBrewV2.Models.TableOrder

@{
    ViewData["Title"] = "Book";
}

<h1 class="text-center">Reserve A Table</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingTime" class="control-label"></label>
                <input asp-for="BookingTime" class="form-control" />
                <span asp-validation-for="BookingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfPeople" class="control-label"></label>
                <input asp-for="NoOfPeople" class="form-control" />
                <span asp-validation-for="NoOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="Location" asp-items="Html.GetEnumSelectList<LocationList>()" class="form-select"></select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="width: 100%;"/>
            </div>
        </form>
    </div>
</div>

