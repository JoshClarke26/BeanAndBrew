@model BeanAndBrewV2.Models.CoffeeOrder

@{
    ViewData["Title"] = "Confirmation";
}

<h1 class="text-center">Order Confirmation</h1>
<hr />
<div class="row text-center">
    <div class="col mx-auto">
        <h5>Coffee Type: <span style="font-weight: normal">@ViewBag.Coffee</span></h5>
        <h5>Coffee Price: <span style="font-weight: normal">@ViewBag.Price</span></h5>
        <h5>Amount: <span style="font-weight: normal">@Model.Amount</span></h5>
    </div>
</div>

